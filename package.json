{
  "name": "@verikami/remark-deflist-revisited",
  "version": "0.4.0",
  "description": "Remark plugin. A wrapper around `remark-deflist` with improved support for nested definition lists. Bun, Deno and Cloudflare Workers compatibility.",
  "keywords": [
    "remark",
    "remark-plugin",
    "remark-deflist",
    "markdown",
    "markdown-plugin",
    "definition-list",
    "nested-lists",
    "deflist",
    "unist",
    "astro",
    "parser",
    "wrapper"
  ],
  "author": "veriKami <verikami@gmail.com> (https://verikami.com/)",
  "license": "MIT",
  "repository": "github:veriKami/remark-deflist-revisited",
  "homepage": "https://github.com/veriKami/remark-deflist-revisited#readme",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "_:npm": "node scripts/build.npm.js",
    "_:jsr": "node scripts/build.jsr.js",
    "_:tsc": "cp src/index.d.ts dist/index.d.ts",
    "build": "tsc && pnpm _:tsc && pnpm _:npm && pnpm fmt:dist",
    "build:jsr": "pnpm _:jsr && pnpm fmt:lib",
    "build:all": "pnpm build && pnpm build:jsr",
    "build:clean": "rm -f dist/* && tsc && pnpm fmt:dist",
    "build:bundle": "pnpm make:bundle && pnpm make:types",
    "make:bundle": "esbuild src/index.ts --bundle --platform=node --packages=external --format=esm --outfile=dist/index.js",
    "make:types": "tsc src/index.ts --lib es2022 --declaration --emitDeclarationOnly --outDir dist",
    "lint": "eslint",
    "test": "vitest run",
    "test:-": "vitest",
    "test:u": "vitest -u",
    "test:c": "vitest run --coverage",
    "test:r": "vitest run --reporter=junit --outputFile=test-report.junit.xml",
    "test:bun": "bun run test && bun run sample",
    "d:c": "dprint output-resolved-config",
    "d:f": "dprint output-file-paths",
    "d:u": "dprint config update",
    "fmt": "dprint fmt",
    "fmt:demo": "dprint fmt demo/**/* demo/*",
    "fmt:dist": "dprint fmt dist/*.js",
    "fmt:lib": "dprint fmt lib/*.ts",
    "sample": "node scripts/sample.node.js",
    "sample:bun": "bun scripts/sample.node.js",
    "sample:deno": "deno run --allow-read scripts/sample.deno.js",
    "demo": "node scripts/make.html.js && pnpm fmt:demo",
    "demo:ts": "tsx scripts/make.html.ts && pnpm fmt:demo",
    "deno": "deno run --allow-read",
    "p:jsr:dry": "jsr publish --allow-dirty --dry-run",
    "p:jsr": "jsr publish --allow-dirty",
    "bump:dry": "node scripts/bump.js --dry-run",
    "bump:nop": "node scripts/bump.js --no-push",
    "bump": "node scripts/bump.js",
    "release": "pnpm bump"
  },
  "packageManager": "pnpm@10.15.1",
  "dependencies": {
    "remark-deflist": "^1.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "peerDependencies": {
    "remark": "^15",
    "remark-parse": "^11",
    "unified": "^11"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/mdast": "^4.0.4",
    "@types/node": "^24.3.1",
    "@types/unist": "^3.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "dedent": "^1.7.0",
    "dprint": "^0.50.1",
    "esbuild": "^0.25.9",
    "eslint": "^9.35.0",
    "fast-glob": "^3.3.3",
    "globals": "^16.4.0",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "remark-parse": "^11.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "unified": "^11.0.5",
    "vitest": "^3.2.4"
  }
}
